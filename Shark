package race;
import java.awt.Image;
import java.awt.Rectangle;

import javax.swing.ImageIcon;

public class Shark {
     int x;
     int y;
     int speed;
     Image img = new ImageIcon("E:\\oop\\romanskaya\\workspace\\Gonochki\\src\\race\\img\\shark.png").getImage();
     Ocean ocean;
     
     public Rectangle getRect(){
    	 return new Rectangle(x, y, 160, 72);
     }
     
     public Shark(int x, int y, int speed, Ocean ocean) {
    	 this.x = x;
    	 this.y = y;
    	 this.speed = speed;
    	 this.ocean = ocean;
	}
	public void move(){
    	 x = x - ocean.m.speed + speed;
    	 
     }
    	 
     
}
