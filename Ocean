package race;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;
import java.util.Random;

import javax.swing.ImageIcon;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.Timer;

public class Ocean extends JPanel implements ActionListener, Runnable{
	

	Timer mainTimer = new Timer(20, this);
	
	Image img = new ImageIcon("E:\\oop\\romanskaya\\workspace\\Gonochki\\src\\race\\img\\ocean2.jpg").getImage();
	
	Fish m = new Fish();
	

Thread Sharks = new Thread(this);
Thread Musics = new Thread(new Music());

List<Shark> sharks = new ArrayList<Shark>();
	
	
	public Ocean(){
		mainTimer.start();
		Sharks.start();
		Musics.start();
		addKeyListener(new MyKeyAdapter());
        setFocusable(true);
        
	}
	
	private class MyKeyAdapter extends KeyAdapter {
        public void keyPressed(KeyEvent e) {
            m.keyPressed(e);
        }
    public void keyReleased(KeyEvent e) {
            m.keyReleased(e);
        }
	}
	
	public void paint(Graphics g){
		g = (Graphics2D) g;
		g.drawImage(img, m.layer1, 0, null);
		g.drawImage(img, m.layer2, 0, null);
		g.drawImage(m.img, m.x, m.y, null);
		
		double speed = (200/Fish.MAX_V) * m.speed;
		g.setColor(Color.RED);
		Font font = new Font("Times New Roman",Font.BOLD, 20);
		g.setFont(font);
		g.drawString("Скорость:" + speed + "км/ч", 400, 30);
		
		double way = m.way/1000;
		g.setColor(Color.RED);
		Font font1 = new Font("Times New Roman",Font.BOLD,20);
		g.setFont(font1);
		g.drawString("Пройденный путь:"+ way + "км", 400, 50);
		
		
		
	Iterator<Shark> i = sharks.iterator();
		while(i.hasNext()){
			Shark e = i.next();
			if (e.x >= 2400 || e.x <= -2400){
				i.remove();
			} else{	
			e.move();
			g.drawImage(e.img, e.x, e.y, null);
			}
		}
	}

	
	public void actionPerformed(ActionEvent e){
		m.move();
		repaint();
		testCrash();
		testWin();
		
	}

	private void testWin() {
		
		if (m.way > 50000){
			JOptionPane.showMessageDialog(null, "Вы выиграли!");
			System.exit(0);
		}
		
	}


	private void testCrash() {
		
		Iterator<Shark> i = sharks.iterator();
		while(i.hasNext()){
			Shark e = i.next();
			if (m.getRect().intersects(e.getRect())){
				JOptionPane.showMessageDialog(null, "Вас съели!");
				System.exit(1);
			}
		}
	}


	@Override
	public void run() {
		while(true){
			Random rand = new Random();
			try {
				Thread.sleep(rand.nextInt(2000));
				sharks.add(new Shark(1200,
						rand.nextInt(450),
						rand.nextInt(60),
						this));
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		
	}
		
	}
